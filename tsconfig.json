{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "strict": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"],
      "@images/*": ["assets/images/*"],
      "@components/*": ["src/components/*"],
      "@constants/*": ["src/constants/*"],
      "@fonts/*": ["assets/fonts/*"]
    }
  },
  "include": ["**/*.ts", "**/*.tsx", ".expo/types/**/*.ts", "expo-env.d.ts"]
}
